;--------------------------------------------------------
  ;RUTINA DONDE CAMBIAMOS DE REGISTRO PARA IR CAMBIANDO DE DISPLAY 
  ;LAS LETRAS
  ;Y DONDE SE PUEDE ESCOHER CUAL MENSAJE SE VISUALIZA SEGUN LA POSICION DEL
  ;DIP SWITCH
;----------------------------------------------------------
ROTAR:
    CALL  ROTAR_CARACTER
    
    BTFSC PORTA,RA2
    GOTO  MENSAJE5
    BTFSC PORTA,RA1
    GOTO  BITEN1
    BTFSC PORTA,RA0
    GOTO  MENSAJE2
MENSAJE1:
    MOVF  REG3,W    
    CALL  MENSAJE_1
    GOTO  NEXT
MENSAJE2:
    MOVF  REG3,W    
    CALL  MENSAJE_2
    GOTO  NEXT
BITEN1:
    BTFSC PORTA,RA0
    GOTO  MENSAJE4
    MOVF  REG3,W    
    CALL  MENSAJE_3
    GOTO  NEXT
MENSAJE4:
    MOVF  REG3,W    
    CALL  MENSAJE_4
    GOTO  NEXT
MENSAJE5:
    MOVF  REG3,W
    CALL  MENSAJE_5
NEXT:    
    MOVWF INDF
    MOVLW .33
    XORWF REG3,W
    BTFSC STATUS,Z
    GOTO  $+3
    INCF  REG3
    RETURN
    CLRF  REG3
    RETURN


