;--------------------------------------------------------
    ;RUTINA DE CONVERSOR EL REGISTRO DE HORAS
    ;SON GUARDADOS EN DOS REGISTROS LAS UNIDADES Y DECENAS DEL REGISTRO HORAS
    ;ESTO CON EL FIN DE MOSTRAR CADA DIGITO EN LOS DISPLAYS
;-----------------------------------------------------
CONVERSOR3:    
    CLRF     ENTRADAHOR
    CLRF     SALIDAAHOR
    CLRF     SALIDABHOR
    MOVF     0X22,W
    MOVWF    ENTRADAHOR
    
BCD_BAJO2:
    MOVF     ENTRADAHOR,W
    MOVLW   .10        ;MOVER 10 AL ACUMULADOR  W
    SUBWF   ENTRADAHOR,f  ;RESTA ENTRE EL REGISTRO ACAMBIAR Y 100
    BTFSS   STATUS,C   ;SALTO SI EL CARRY ESTA EN 1
    GOTO    SUMA_DIEZ2
    INCF    SALIDAAHOR    ;INCREMENTO DEL VALOR DEL REGISTRO UNIDECE
    GOTO    BCD_BAJO2
SUMA_DIEZ2:
    
    MOVF    ENTRADAHOR,W
    MOVLW   .10
    ADDWF   ENTRADAHOR,F
    MOVF    ENTRADAHOR,W
    MOVWF   SALIDABHOR
    RETURN


