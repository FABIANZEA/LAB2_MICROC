;--------------------------------------------------------
    ;RUTINA DE CONVERSOR EL REGISTRO DE MINUTOS
    ;SON GUARDADOS EN DOS REGISTROS LAS UNIDADES Y DECENAS DEL REGISTRO MINUTOS
    ;ESTO CON EL FIN DE MOSTRAR CADA DIGITO EN LOS DISPLAYS
;-----------------------------------------------------
CONVERSOR2:    
    CLRF     ENTRADAMIN
    CLRF     SALIDAAMIN
    CLRF     SALIDABMIN
    MOVF     0X21,W
    MOVWF    ENTRADAMIN
    
BCD_BAJO1:
    MOVF     ENTRADAMIN,W
    MOVLW   .10        ;MOVER 10 AL ACUMULADOR  W
    SUBWF   ENTRADAMIN,f  ;RESTA ENTRE EL REGISTRO ACAMBIAR Y 100
    BTFSS   STATUS,C   ;SALTO SI EL CARRY ESTA EN 1
    GOTO    SUMA_DIEZ1
    INCF    SALIDAAMIN    ;INCREMENTO DEL VALOR DEL REGISTRO UNIDECE
    GOTO    BCD_BAJO1
SUMA_DIEZ1:
    
    MOVF    ENTRADAMIN,W
    MOVLW   .10
    ADDWF   ENTRADAMIN,F
    MOVF    ENTRADAMIN,W
    MOVWF   SALIDABMIN
    RETURN


