;--------------------------------------------------------
    ;RUTINA DE CONVERSOR EL REGISTRO DE SEGUNDOS
    ;SON GUARDADOS EN DOS REGISTROS LAS UNIDADES Y DECENAS DEL REGISTRO SEGUNDOS
    ;ESTO CON EL FIN DE MOSTRAR CADA DIGITO EN LOS DISPLAYS
;-----------------------------------------------------
CONVERSOR1:
    CLRF     ENTRADASEG
    CLRF     SALIDAASEG
    CLRF     SALIDABSEG
    MOVF     0X20,W
    MOVWF    ENTRADASEG
    
BCD_BAJO:
    MOVF     ENTRADASEG,W
    MOVLW   .10        ;MOVER 10 AL ACUMULADOR  W
    SUBWF   ENTRADASEG,f  ;RESTA ENTRE EL REGISTRO ACAMBIAR Y 100
    BTFSS   STATUS,C   ;SALTO SI EL CARRY ESTA EN 1
    GOTO    SUMA_DIEZ
    INCF    SALIDAASEG    ;INCREMENTO DEL VALOR DEL REGISTRO UNIDECE
    GOTO    BCD_BAJO
SUMA_DIEZ:
    
    MOVF    ENTRADASEG,W
    MOVLW   .10
    ADDWF   ENTRADASEG,F
    MOVF    ENTRADASEG,W
    MOVWF   SALIDABSEG
    RETURN