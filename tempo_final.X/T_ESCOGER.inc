;--------------------------------------------------------
  ;RUTINA DONDE TENIENDO EN CUENTA LA POSICION DE LOS DIP SWITCH 
  ;SE ESCOJEN LOS TIEMPOS DEL TEMPORIZACION
  ;TIEMPO 1 000
  ;50 SEGUNDOS
  
  ;TIEMPO 2 001
  ;1 MINUTO 10 SEGUNDOS
  
  ;TIEMPO 3 010
  ;3 MINUTOS  30 SEGUNDOS

  ;TIEMPO 4 011
  ;4 MINUTOS  17 SEGUNDOS

  ;TIEMPO 5 100
  ;5 MINUTOS  0 SEGUNDOS
;----------------------------------------------------------
T_ESCOGER:
    BTFSC PORTA,RA2
    GOTO  TIEMPO_5
    BTFSC PORTA,RA1
    GOTO  BIT1
    BTFSC PORTA,RA0
    GOTO  TIEMPO_2
  TIEMPO_1:
    MOVLW VENTANASEG
    MOVWF FSR
    MOVLW .50
    MOVWF INDF
    INCF  FSR
    CLRF  INDF
    INCF  FSR
    CLRF  INDF
    GOTO  CAMBIAR 
  TIEMPO_2:
    MOVLW VENTANASEG
    MOVWF FSR
    MOVLW .10
    MOVWF INDF
    INCF  FSR
    MOVLW .1
    MOVWF INDF
    INCF  FSR
    CLRF  INDF
    GOTO  CAMBIAR 

  BIT1:
    BTFSC PORTA,RA0
    GOTO TIEMPO_4
 TIEMPO_3:
    MOVLW VENTANASEG
    MOVWF FSR
    MOVLW .30
    MOVWF INDF
    INCF  FSR
    MOVLW .3
    MOVWF INDF
    INCF  FSR
    CLRF  INDF
    GOTO  CAMBIAR 
  TIEMPO_4:
    MOVLW VENTANASEG
    MOVWF FSR
    MOVLW .17
    MOVWF INDF
    INCF  FSR
    MOVLW .4
    MOVWF INDF
    INCF  FSR
    CLRF  INDF
    GOTO  CAMBIAR 
  TIEMPO_5:
    MOVLW VENTANASEG
    MOVWF FSR
    CLRF  INDF
    INCF  FSR
    MOVLW .5
    MOVWF INDF
    INCF  FSR
    CLRF  INDF
    GOTO  CAMBIAR 
 CAMBIAR:   
   RETURN